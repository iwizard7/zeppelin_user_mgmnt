name: Pylint Simple

on: [push]

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ["3.8", "3.9", "3.10"]
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Set up Python ${{ matrix.python-version }}
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pylint flask
    
    - name: Analysing the code with pylint
      run: |
        # Простая проверка с игнорированием большинства предупреждений
        pylint app.py \
          --disable=missing-docstring,invalid-name,too-many-locals,too-many-branches,too-many-statements,broad-except,global-statement,line-too-long,import-outside-toplevel,unused-variable,consider-using-f-string \
          --exit-zero